<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BrokerBudget.MVC</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BrokerBudget.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
</head>
<body>
    <div class="navbar-container">
        <nav class="navbar navbar-expand-sm navbar-dark bg-black">
            <ul class="navbar-nav ml-auto ">
                <li class="nav-item mb-1">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">
                        <svg xmlns="http://www.w3.org/2000/svg" height="1.5em" viewBox="0 0 576 512">
                            <style>
                                svg {
                                    fill: #ffffff
                                }</style>
                            <path d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z" />
                        </svg>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Purchase" asp-action="GetAllPurchases" class="nav-link">
                        <div class="name-wrapper">
                            Харидлар
                        </div>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Payment" asp-action="GetAllPayments" class="nav-link">
                        <div class="name-wrapper">
                            Тўловлар
                        </div>
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a asp-controller="Expense" asp-action="GetAllExpenses" class="nav-link">
                        <div class="name-wrapper">
                            Харажатлар
                        </div>
                    </a>
                </li>
            </ul>
        </nav>
        <div  style="display:flex; align-items:center; justify-content:space-between;">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <partial name="_LoginPartial" class="nav-link" />
                </li>
            </ul>
        </div>
    </div>
    <div class="body-faza pb-5">
        <div class="body-container">
            <main role="main" class="pb-3 main-container">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
