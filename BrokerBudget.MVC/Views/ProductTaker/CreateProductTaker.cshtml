@using BrokerBudget.Application.UseCases.ProductTakers.Commands.CreateProductTaker;
@using BrokerBudget.Domain.Entities;

@{
    ViewData["Title"] = "CreateProductTaker";
    Layout = "_Layout";
}

@model CreateProductTakerCommand

<h3 class="text-center">Янги товар олувчи қўшиш</h3>
<hr />
<form asp-controller="ProductTaker" asp-action="CreateProductTaker" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="CompanyName" class="form-label">Корхона номи:</label>
                    <input asp-for="CompanyName" type="text" class="form-control" placeholder="Корхона номини киритинг">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ResponsiblePersonName" class="form-label">Маъсул шахс исми:</label>
                    <input asp-for="ResponsiblePersonName" type="text" class="form-control" placeholder="Маъсул шахс исмини киритинг">
                    <span asp-validation-for="ResponsiblePersonName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="PhoneNumber" class="form-label">Телефон рақам:</label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Телефон рақамни киритинг">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="INN" class="form-label">ИНН:</label>
                    <input asp-for="INN" type="text" class="form-control" placeholder="ИНН киритинг">
                    <span asp-validation-for="INN" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="BankAccountNumber" class="form-label">Банк хисоб рақам:</label>
                    <input asp-for="BankAccountNumber" type="text" class="form-control" placeholder="Банк хисоб рақамини киритинг">
                    <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Сақлаш</button>
                </div>
            </div>
        </div>
    </div>
</form>
