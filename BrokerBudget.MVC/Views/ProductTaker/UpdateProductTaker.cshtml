@using BrokerBudget.Application.UseCases.ProductTakers.Commands.UpdateProductTaker;
@using BrokerBudget.Application.UseCases.ProductTakers;
@using BrokerBudget.Domain.Entities;
@model ProductTakerResponse

@{
    ViewData["Title"] = "UpdateProductTaker";
    Layout = "_Layout";
}

<h3 class="header-text">Товар олувчи маълумотларини ўзгартириш</h3>
<hr />

<form asp-controller="ProductTaker" asp-action="UpdateProductTaker" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="create-form mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; height:70vh">
                <div class="custom-input">

                    <div class="form-group mt-3">
                        <label asp-for="CompanyName">Корхона номи:</label>
                        <input asp-for="CompanyName" class="form-control" required value="@Model.CompanyName" />
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="ResponsiblePersonName" class="form-label">Маъсул шахс исми:</label>
                        <input asp-for="ResponsiblePersonName" type="text" class="form-control" value="@Model.ResponsiblePersonName">
                        <span asp-validation-for="ResponsiblePersonName" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="PhoneNumber">Телефон рақам:</label>
                        <input asp-for="PhoneNumber" class="form-control" required value="@Model.PhoneNumber" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="INN">INN:</label>
                        <input asp-for="INN" class="form-control" required value="@Model.INN" />
                        <span asp-validation-for="INN" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="BankAccountNumber">Банк хисоб рақам:</label>
                        <input asp-for="BankAccountNumber" class="form-control" required value="@Model.BankAccountNumber" />
                        <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Сақлаш</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
