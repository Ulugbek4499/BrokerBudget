@using BrokerBudget.Application.UseCases.Payments.Commands.CreatePayment;
@using BrokerBudget.Application.UseCases.ProductGivers;
@using BrokerBudget.Application.UseCases.ProductTakers;
@using BrokerBudget.Domain.Entities;


@{
    ViewData["Title"] = "CreatePayment";
    Layout = "_Layout";

    ProductGiverResponse[] ProductGivers = ViewData["ProductGivers"] as ProductGiverResponse[];
    ProductTakerResponse[] ProductTakers = ViewData["ProductTakers"] as ProductTakerResponse[];
}

@model CreatePaymentCommand


<h3 class="text-center">Янги тўлов қўшиш</h3>
<hr />
<form asp-controller="Payment" asp-action="CreatePayment" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="PaymentAmount" class="form-label">Тўлов Суммаси:</label>
                    <input asp-for="PaymentAmount" type="text" class="form-control" placeholder="Тўлов Суммасини киритиш">
                    <span asp-validation-for="PaymentAmount" class="text-danger"></span>
                </div>
      
                <div class="form-group mt-3">
                    <label asp-for="PaymentDate">Тўлов Куни:</label>
                    <input asp-for="PaymentDate" type="date" class="form-control" required />
                    <span asp-validation-for="PaymentDate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label for="ProductGiverId">Товар Берувчи:</label>
                    <select class="form-control" id="ProductGiverId" name="ProductGiverId" required>
                        <option value="">Товар Берувчини киритиш</option>
                        @foreach (var ProductGiver in ProductGivers)
                        {
                            <option value="@ProductGiver.Id" data-ProductGiver-number="@ProductGiver.CompanyName">@ProductGiver.ResponsiblePersonName / @ProductGiver.PhoneNumber</option>
                        }
                    </select>
                </div>

                <script>
                    $(document).ready(function () {
                        $('#ProductGiverId').select2(); 
                    });
                </script>

                <div class="form-group mt-3">
                    <label for="ProductTakerId">Товар Олувчи:</label>
                    <select class="form-control" id="ProductTakerId" name="ProductTakerId" required>
                        <option value="">Товар Олувчини киритиш</option>
                        @foreach (var ProductTaker in ProductTakers)
                        {
                            <option value="@ProductTaker.Id" data-ProductGiver-number="@ProductTaker.CompanyName">@ProductTaker.ResponsiblePersonName / @ProductTaker.PhoneNumber</option>
                        }
                    </select>
                </div>

                <script>
                    $(document).ready(function () {
                        $('#ProductTakerId').select2();
                    });
                </script>


                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Сақлаш</button>
                </div>
            </div>
        </div>
    </div>
</form>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('#ProductGiverId').select2({
            placeholder: "Товар Берувчи Танланг",
            allowClear: true,
            matcher: function (params, data) {
                if ($.trim(params.term) === '') {
                    return data;
                }

                var term = $.trim(params.term).toLowerCase();
                var text = data.text.toLowerCase();

                if (text.indexOf(term) > -1) {
                    return data;
                }

                return null;
            }
        });
    });

    $(document).ready(function () {
        $('#ProductTakerId').select2({
            placeholder: "Товар Олувчини Танланг",
            allowClear: true,
            matcher: function (params, data) {
                if ($.trim(params.term) === '') {
                    return data;
                }

                var term = $.trim(params.term).toLowerCase();
                var text = data.text.toLowerCase();

                if (text.indexOf(term) > -1) {
                    return data;
                }

                return null;
            }
        });
    });
</script>

