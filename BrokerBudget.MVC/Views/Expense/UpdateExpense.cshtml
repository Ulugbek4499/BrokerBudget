@using BrokerBudget.Application.UseCases.Expenses.Commands.UpdateExpense;
@using BrokerBudget.Application.UseCases.Expenses;
@using BrokerBudget.Domain.Entities;
@model ExpenseResponse

@{
    ViewData["Title"] = "UpdateExpense";
    Layout = "_Layout";
}

<h3 class="header-text"> Харажатни ўзгартириш</h3>
<hr />

<form asp-controller="Expense" asp-action="UpdateExpense" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="overflow-y:scroll; width:50%; height:70vh">
                <div class="custom-input">
                   
                    <div class="form-group mt-3">
                        <label asp-for="Amount" class="form-label">Харажат суммаси:</label>
                        <input asp-for="Amount" type="text" class="form-control" value="@Model.Amount">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="Note">Изоҳ:</label>
                        <input asp-for="Note" class="form-control" required value="@Model.Note" />
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>


                    <div class="form-group mt-3">
                        <label asp-for="ExpenseDate">Харажат Куни:</label>
                        <input asp-for="ExpenseDate" type="date" class="form-control" required value="@Model.ExpenseDate.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Сақлаш</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
