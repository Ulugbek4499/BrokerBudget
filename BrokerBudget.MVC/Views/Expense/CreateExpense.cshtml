@using BrokerBudget.Application.UseCases.Expenses.Commands.CreateExpense;
@using BrokerBudget.Domain.Entities;

@{
    ViewData["Title"] = "CreateExpense";
    Layout = "_Layout";
}

@model CreateExpenseCommand

<h3 class="text-center">Янги xаражат қўшиш</h3>
<hr />
<form asp-controller="Expense" asp-action="CreateExpense" enctype="multipart/form-data" method="post">
    <div class="create-form mt-5">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="Amount" class="form-label">Харажат суммаси:</label>
                    <input asp-for="Amount" type="text" class="form-control" placeholder="Харажат суммасини киритиш">
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Note" class="form-label">Изоҳ:</label>
                    <input asp-for="Note" type="text" class="form-control" placeholder="Изоҳни киритинг">
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="ExpenseDate">Харажат куни:</label>
                    <input asp-for="ExpenseDate" type="date" class="form-control" required />
                    <span asp-validation-for="ExpenseDate" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Сақлаш</button>
                </div>

            </div>
        </div>
    </div>
</form>
