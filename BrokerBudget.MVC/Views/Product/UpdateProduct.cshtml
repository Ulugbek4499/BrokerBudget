@using BrokerBudget.Application.UseCases.Products.Commands.UpdateProduct;
@using BrokerBudget.Application.UseCases.Products;
@using BrokerBudget.Domain.Entities;
@using BrokerBudget.Domain.States;

@model ProductResponse

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "_Layout";
}

<h3 class="text-center">Товар маълумотларини ўзгартириш</h3>
<hr />

<form asp-controller="Product" asp-action="UpdateProduct" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6" style="overflow-y:scroll; width:50%; height:70vh">
                <div class="custom-input">

                    <div class="form-group mt-3">
                        <label asp-for="Name">Товар Номи:</label>
                        <input asp-for="Name" class="form-control" required value="@Model.Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-3">
                        <label asp-for="AmountCategory">Товар Бирлигни:</label>
                        <select asp-for="AmountCategory" class="form-control" required>
                            <option value="">Товар Бирлигни Танланг</option>
                            @foreach (var status in Enum.GetValues(typeof(AmountCategory)))
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                        <span asp-validation-for="AmountCategory" class="text-danger"></span>
                    </div>

                    <div class="form-group button-group mt-3">
                        <button type="submit" class="btn btn-success">Сақлаш</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
