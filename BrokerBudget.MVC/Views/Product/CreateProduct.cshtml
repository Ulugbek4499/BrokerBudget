@using BrokerBudget.Application.UseCases.Products.Commands.CreateProduct;
@using BrokerBudget.Application.UseCases.ProductGivers;
@using BrokerBudget.Application.UseCases.ProductTakers;
@using BrokerBudget.Domain.Entities;
@using BrokerBudget.Domain.States;


@{
    ViewData["Title"] = "CreateProduct";
    Layout = "_Layout";
}

@model CreateProductCommand


<h3 class="text-center">Янги товар қўшиш</h3>
<hr />
<form asp-controller="Product" asp-action="CreateProduct" enctype="multipart/form-data" method="post">
    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-6 offset-lg-3" style="overflow-y:scroll; width:50%; height:70vh">

                <div class="form-group mt-3">
                    <label asp-for="Name" class="form-label">Товар Номи:</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Товар номини киритиш">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group pt-3">
                    <label asp-for="AmountCategory">Товар Бирлигни:</label>
                    <select asp-for="AmountCategory" class="form-control" required>
                        <option value="">Товар Бирлигни Танланг</option>
                        @foreach (var status in Enum.GetValues(typeof(AmountCategory)))
                        {
                            <option value="@status">@status</option>
                        }
                    </select>
                    <span asp-validation-for="AmountCategory" class="text-danger"></span>
                </div>

                <div class="form-group button-group mt-3">
                    <button type="submit" class="btn btn-success">Сақлаш</button>
                </div>

            </div>
        </div>
    </div>
</form>

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

