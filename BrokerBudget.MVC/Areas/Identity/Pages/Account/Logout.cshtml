@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    <h1>Чиқиш </h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Чиқиш учун бу йерга босинг</button>
            </form>
        }
        else
        {
            <p>Сиз иловадан муваффақиятли чиқиб кетдингиз.</p>
        }
    }
</header>
